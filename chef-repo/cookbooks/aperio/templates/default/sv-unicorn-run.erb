#!/bin/bash

export PATH=/opt/rbenv/shims:$PATH

cd <%= @options[:app][:deploy_to] %>/current

exec 2>&1
exec <%= node[:runit][:chpst_bin] %> -u <%= @options[:app][:user] %> bundle exec <%= @options[:smells_like_rack] ? 'unicorn' : 'unicorn_rails' %> -E <%= @options[:rails_env] %> -c /etc/unicorn/<%= @options[:app][:id] %>.rb
