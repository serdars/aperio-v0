upstream aperio {
  server unix:/srv/aperio/current/tmp/aperio.sock fail_timeout=0;
}

server {
  listen 80;

  client_max_body_size 4G;
  server_name _;
  keepalive_timeout 10;

  root /srv/aperio/current/public;

  try_files $uri/index.html $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://aperio;
 }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /srv/aperio/current/public;
  }
}
