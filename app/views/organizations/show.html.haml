.row
  .col-md-offset-1.col-md-7
    .row
      .col-md-9
        %h2
          = @organization.name
          %br
          %a{:href => @organization.website}
            %small
              = @organization.website
      .col-md-3
        .btn-group.pull-right
          - if @organization.admin?(current_user)
            %a.btn.btn-warning{:href => organization_manage_path(@organization), :title => "Manage Organization", :data => {toggle: "tooltip", container: 'body'} }
              %i.fa.fa-gear.fa-lg
          %a.btn.btn-info{:href => root_path, :title => "Start Conversation", :data => {toggle: "tooltip", container: 'body'} }
            %i.fa.fa-pencil.fa-lg
        - unless @organization.member?(current_user)
          .pull-right
            = render partial: "shared/button_to", locals: {target: organization_join_path(@organization), value: "", icon: "fa fa-sign-in fa-lg", block:false, title: "Join"}
    %p
      = @organization.description
    = render partial: "conversations/index", locals: { conversations: filter_conversations(@organization.conversations, group: @group) }
  .col-md-3
    %h3
      Groups
    %ul.list-group
      - @organization.groups.each do |group|
        - if group.visible
          %li.list-group-item{:class => ("list-group-item-info" if @group == group)}
            - if @organization.member?(current_user) && !group.member?(current_user) && !group.private
              .pull-right
                = render partial: "shared/button_to", locals: {target: group_join_path(group), value: "", icon: "fa fa-sign-in fa-lg", block: false, title: "Join"}
            - if @group == group
              = group.name
            - else
              %a{:href => organization_path(@organization, group: group)}
                = group.name
            %br
            %small
              - if group.private
                Private Group
              - else
                = "#{group.memberships.count} members #{'including you' if group.member?(current_user)}, #{group.conversations.count} conversations"
