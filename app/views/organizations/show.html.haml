.row
  .col-md-offset-2.col-md-6
    %h2
      = @organization.name
      %br
      %a{:href => @organization.website}
        %small
          = @organization.website
    %p
      = @organization.description
  .col-md-2
    %h3
      Groups
    %ul.list-group
      - @organization.groups.each do |group|
        - if group.visible
          %li.list-group-item{:class => ("list-group-item-info" if group.member?(current_user))}
            - unless group.member?(current_user)
              %a.btn.btn-primary.pull-right{:href => group_join_path(group)}
                %i.fa.fa-plus-circle
                Join
            = group.name
            %br
            %small
              = "#{group.memberships.count} members"
              - if group.member?(current_user)
                including you
    - unless @organization.member?(current_user)
      %a.btn.btn-primary.btn-block{:href => organization_join_path(@organization)}
        Join Organization
