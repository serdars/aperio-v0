.row
  .col-md-offset-2.col-md-6
    %h2
      = @organization.name
      %br
      %a{:href => @organization.website}
        %small
          = @organization.website
    %p
      = @organization.description
  .col-md-2
    - if @organization.admin?(current_user)
      %a.btn.btn-primary.btn-block{:href => organization_manage_path(@organization)}
        Manage Organization
    %h3
      Groups
    %ul.list-group
      - @organization.groups.each do |group|
        - if group.visible
          %li.list-group-item{:class => ("list-group-item-info" if group.member?(current_user))}
            - if @organization.member?(current_user) && !group.member?(current_user) && !group.private
              .pull-right
                = render partial: "shared/button_to", locals: {target: group_join_path(group), value: "Join", icon: "fa fa-plus-circle", block: false}
            = group.name
            %br
            %small
              = "#{group.memberships.count} members"
              - if group.member?(current_user)
                including you
              - elsif group.private
                \- Private Group
    - unless @organization.member?(current_user)
      = render partial: "shared/button_to", locals: {target: organization_join_path(@organization), value: "Join Organization", icon: nil, block:true}
