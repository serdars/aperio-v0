.thumbnail.a-organization-thumbnail
  .caption
    %h4
      %a{:href => organization_path(organization)}
        = organization.name
    - organization.tags.each do |tag|
      .pull-left
        %span.label.label-info
          = tag.name
    .clearfix
    %small
      %a{:href => organization.website}
        = organization.website
    %p
      = organization.description
