.row
  .col-md-offset-1.col-md-10
    .list-group-item
      = render partial: "conversations/header", locals: {conversation: @conversation}
    - @conversation.messages.each do |message|
      .list-group-item
        %h5.list-group-item-heading
          %a{:href => user_path(message.user)}
            #{message.user.email}
          %small
            posted on #{l message.created_at, format: :short}
        %p.list-group-item-text
          = message.body
