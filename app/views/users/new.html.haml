.row
  .col-md-offset-2.col-md-8
    %ul.nav.nav-tabs
      %li.active
        %a{:href => "#register", "data-toggle" => "tab"}
          Register
      %li
        %a{:href => "#login", "data-toggle" => "tab"}
          Login

    .tab-content.pane-frame
      .tab-pane.active.pane#register
        = form_for @user, html: { class: "form-horizontal" } do |f|
          .form-group
            = f.label :email, "Email", class: "col-sm-3 control-label"
            .col-sm-6
              = f.email_field :email, class: "form-control", placeholder: "Email"
          .form-group
            = f.label :password, "Password", class: "col-sm-3 control-label"
            .col-sm-6
              = f.password_field :password, class: "form-control", placeholder: "Password"
          .form-group
            = f.label :password_confirmation, "Confirm Password", class: "col-sm-3 control-label"
            .col-sm-6
              = f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"
          - unless @user.errors.full_messages.empty?
            .form-group
              .col-sm-offset-3.col-sm-6.alert.alert-warning
                %ul.list-unstyled
                  - @user.errors.full_messages.each do |message|
                    %li
                      = message
          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit "Register", class: "btn btn-primary"
      .tab-pane.pane#login
        = form_for @user_session, html: { class: "form-horizontal" } do |f|
          .form-group
            = f.label :email, "Email", class: "col-sm-3 control-label"
            .col-sm-6
              = f.email_field :email, class: "form-control", placeholder: "Email"
          .form-group
            = f.label :password, "Password", class: "col-sm-3 control-label"
            .col-sm-6
              = f.password_field :password, class: "form-control", placeholder: "Password"
          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit "Login", class: "btn btn-primary"
