%nav.ap-navbar.ap-navbar-default.ap-navbar-fixed-top{:role => "navigation"}
  .container-fluid
    .ap-navbar-header
      %a.ap-navbar-brand{:href => root_path()}
        aperio
    - if current_user
      %ul.ap-nav.ap-navbar-nav.ap-navbar-right
        %li
          %a{:href => user_path(current_user, tab: "timeline"), :title => current_user.email, :data => {toggle: "tooltip", placement: "bottom"}}
            %i.fa.fa-lg.fa-user
            = render partial: "shared/badge", locals: {count: current_user.notifications.count}
        %li.dropdown
          %a.dropdown-toggle{:type => "button", :title => "Inbox", :data => {toggle: "dropdown", tooltip: "tooltip", placement: "bottom"}}
            %i.fa.fa-lg.fa-inbox
            = render partial: "shared/badge", locals: {count: current_user.conversation_notifications.count}
          %ul.dropdown-menu{:role => "menu"}
            - current_user.conversation_notification_count_by_org.each do |organization, count|
              %li
                %a{:href => organization_path(organization)}
                  = render partial: "shared/badge", locals: {count: count}
                  #{organization.name}
        %li
          %a.ap-logout{:href => "#", :title => "Sign out", :data => {toggle: "tooltip", placement: "bottom"}}
            %i.fa.fa-lg.fa-sign-out
    - else
      %ul.ap-nav.ap-navbar-nav.ap-navbar-right
        %li
          %a{:href => new_user_path(), :title => "Sign in", :data => {toggle: "tooltip", placement: "bottom"}}
            %i.fa.fa-lg.fa-sign-in
