%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => root_path()}
        Aperio
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            %p.navbar-text
              %a.navbar-link{:href => user_path(current_user, tab: "timeline")}
                #{current_user.email}
              %a.navbar-link{:href => user_path(current_user, tab: "notifications")}
                %span.badge
                  #{current_user.notifications.count}
          %li
            %form.navbar-form{:role => "logout", :action => logout_path(), :method => :post}
              %input{:name => "_method", :type => "hidden", :value => "delete"}
              %input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}
              %button.btn.btn-info{:type => "submit", :title => "Logout", :data => {toggle: "tooltip", placement: "bottom"} }
                %i.fa.fa-lg.fa-power-off
        - else
          %li
            %a{:href => new_user_path()}
              Sign In
