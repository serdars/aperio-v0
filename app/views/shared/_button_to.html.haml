%form.form-inline{:role => "button_to", :action => target, :method => :post}
  %input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}
  %button.btn.btn-primary{:type => "submit", :class => ("btn-block" if block)}
    - if icon
      %i{:class => icon}
    = value
